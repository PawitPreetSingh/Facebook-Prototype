<!DOCTYPE html>
<html>
  <head>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
   
   <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
   <script src="https://code.angularjs.org/1.4.7/angular-route.min.js"> </script>
   
   
   
 <script src="angularjs/info.js"></script>
 
<!-- Loading the AngularJS file from /public/angularJS folder -->

  <style type="text/css">  
  #topBar{
  			background-color:#3A5795;
  			width:100%;
  			height:45px;
  			margin:0;
  			padding:0;
  		}
  #fbdiv{
  		padding-top:8px;
  		padding-left:90px;
  		float:left;
  		}
  		
  #body{
       	background-color:#E9EAED;	
       }	
       
 #secondEmptyBar{
        background-color:#E9EAED;
  		width:100px;
  		height:1000px;
  		float:left
  		}
  #infoBar{
  		background-color:#FFFFFF;
  		width:25%;
  		height:45px;
  		margin:0;
  		padding:0;
  		}
  		
  #infoBar ul{
  margin:0;
  padding:0;
  }
  
  #clear{
  clear:both;
  }
  	
  #infoBar li{
        list-style:none;
        font-weight: bold;
        border-right: 1px solid #e9eaed;
        font-size: 14px;
     	font-weight: bold;
    	height: 43px;
    	line-height: 3.05;
        height:100%
        padding-top: 5px;
        padding-right: 10px;
        padding-left: 10px;
        position: relative;
    	vertical-align: middle;
    	white-space: nowrap;
        float:left;
        color: blue;
        }		
   		
  </style>
  </head>
  <body id="body" ng-app="info" ng-controller="pageController">
  	<div id="container">
  		<div id="topBar">
  			<div id="fbdiv">
  				<img src="./Images/fbCapture.PNG" />
  		
  	&nbsp;&nbsp;&nbsp;&nbsp;	
  	<input type="text" ng-model="name" />
  		<button ng-click="search();">Search</button>
  		
      </div>
      
      <ul class="nav navbar-nav">
                      <li>
                        <a href="/home"><i class="glyphicon glyphicon-home"></i> Home</a>
                      </li>
                      <li>
                        <a href="/logout"><i class="glyphicon glyphicon-user" ></i> logout </a>
                      </li>
                      <li  style="color:white; font-weight: bold; padding-left:6px; padding-top:5px;">
                      
                      <h4> Welcome <%=firstname%> </h4>
                      </li>
         </ul>             
  	  </div>
  	   
  	    
  	    <div id="infoBar">
  	    <ul>
  	    	<li> <a href="/about"> About </a> </li>
  	    	<li> <a href="/Friends">Friends</a></li>
  	    	<li> <a href="/Interests">Interests </a></li>
  	    	<li> <a href="/group">Groups </a></li>
  	    </ul>
  	    </div>
  	    <div style="padding-top:7px">
  	    <a href="/Create_grp"><img src="./Images/Create_grp.PNG" /></a>
  	    </div>
  	    <br/>
  	    
  	    <ul style="list-style:none;">
  	    <li ng-repeat="name in request_array">
  	    <div ng-if = "name.requests != '1' ">
  	    	{{name.requests}}
  	     <button class="btn btn-primary " type="button" ng-click="Accept_request(name.request_sent, name.request_firstname)">Accept</button>
  	     <button class="btn btn-primary " type="button" ng-click="Decline(name.request_sent,name.frnd_email)">Decline</button>
  	     </div>	
  	     </li>
  	     </ul>
  	     </br>
  	     
  	    <ul style="list-style:none;">
  	    	 
  	    	<li ng-repeat="name in match_frnd_results">
  	    	<div ng-if = "name.request_status == '1' ">
  	    		{{name.firstname}}
  	    		<p>Already Friends</p>
  	    		<button class="btn btn-primary " type="button" ng-click="Delete(name.firstname, name.email)">Unfriend</button>
  	    		{{deleteAlert}}
  	    	</div>	
  	    	<div ng-if = "name.request_status != '1' ">
  	    		{{name.firstname}}
  	    		<button class="btn btn-primary " type="button" ng-click="Add(name.firstname, name.email)">AddFriend</button>
  	    		
  	    	</div>	
  	    	</li>
  	    </ul>	
  	   
  	    </br>
  	   	
  	   	<div>
                    <div class="full col-sm-9">
                      
                        <!-- content -->                      
                      	<div class="row">
                          
                         <!-- main col left --> 
                                  
                                  
                                  
                                  
                       
 <div class="well" style="width:760px"> 
                                   <form class="form-horizontal" role="form" style="width:760px">
                                   
                                    <h4>What's New</h4>
                                     <div class="form-group" style="width:600px;padding-left:10px;padding-right:40px">
                                      <textarea class="form-control" placeholder="Update your status" ng-model="text"></textarea>
                                    </div>
                                    <button class="btn btn-primary " type="button" ng-click="post_newsfeed();">Post</button>
                                  </form>
                              </div></center>
                              
                            <center>
                            <% if(news_feed){%> 
                           <table class="table table-striped table-bordered table-hover">
                           <tr><th colspan=2>&nbsp;&nbsp;&nbsp;News Feed</th></tr>
                           <tr><th>&nbsp;&nbsp;&nbsp; Posted By: </th><th>Post:</th></tr>
                            <% for(var i=0;i< news_feed.length;i++){%>
                            <tr><td>&nbsp;&nbsp;&nbsp;<%=news_feed[i].firstname%></td>
		                   <td><%=news_feed[i].post%></td></tr>
	                        <%}%>
	                         <%}%>  
	                         </table> 
                       </center>  
                              </div>
                              </div>
                              </div>
  	    
  	    
  	    
  	
  	</div>
  </body>
 </html> 		
  		